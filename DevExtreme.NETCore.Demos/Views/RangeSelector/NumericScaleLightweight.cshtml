@(Html.DevExtreme().RangeSelector()
    .ID("range-selector")
    .Margin(m => m.Top(50))
    .Size(s => s.Height(210))
    .Scale(s => s
        .StartValue(15000)
        .EndValue(150000)
        .MinorTickInterval(500)
        .TickInterval(15000)
        .MinorTick(m => m.Visible(false))
        .Label(f => f.Format(Format.Currency))
    )
    .SliderMarker(f => f.Format(Format.Currency))
    .Value(new[] { 40000, 80000 })
    .Title("Select House Price Range")
)