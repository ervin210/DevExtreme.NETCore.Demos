@(Html.DevExtreme().BarGauge()
    .ID("gauge")
    .StartValue(0)
    .EndValue(200)
    .Values(new[] { 121.4, 135.4, 115.9, 141.1, 127.5 })
    .Label(l => l.Visible(false))
    .Tooltip(t => t
        .Enabled(true)
        .CustomizeTooltip(@<text>
            function (arg) {
                return {
                    text: "Racer " + (arg.index + 1) + " - " + arg.valueText + " km/h"
                };
            }
        </text>)
    )
    .Export(e => e.Enabled(true))
    .Title(t => t
        .Text("Average Speed by Racer")
        .Font(f => f.Size(28))
    )
)